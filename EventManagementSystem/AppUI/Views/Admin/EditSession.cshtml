@model AppUI.Models.SessionInfo

@{
    // Set the title for the page
    ViewData["Title"] = "EditSession";
}

<style>
    <!-- Custom styles -->
    .card {
        padding: 0px 15px;
        border-radius: 20px;
    }

    .c1 {
        background-color: #80aaff;
        border-radius: 20px;
    }

    .ac {
        font-weight: bold;
        color: #e0726c;
        font-size: 12px;
    }

    input,
    button {
        width: 100%;
        background-color: #fff2f1;
        border-radius: 8px;
        padding: 8px 17px;
        font-size: 13px;
        border: 1px solid #f5f0ef;
        color: #dccece;
    }

    

    form {
        margin-top: 40px;
    }

        form > * {
            margin: 3px 0px;
        }

    .img-illus {
        background-color: antiquewhite;
    }

    .wlcm {
        font-size: 30px;
    }

    .sp1 {
        font-size: 5px;
    }

        .sp1 > span {
            background-color: #f0c3be;
        }

    .btn-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>
<!-- Container fluid for the entire page -->
<div class="container-fluid">
    <!-- Row for aligning content vertically -->
    <div class="row justify-content-center">
        <!-- Column layout for different screen sizes -->
        <div class="col-12 col-sm-10 col-md-12 col-lg-11 col-xl-10">
            <!-- Card for containing the update session form -->
            <div class="card d-flex mx-auto my-5">
                <div class="row">
                    <div class="col-md-5 col-sm-12 col-xs-12 c1 p-5">
                        <div class="w-100 text-center mb-4">
                            <img class="img-illus" src="~/Images/illus2.png" style="max-width: 100%; height: auto; border-radius: 10px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);" class="img-fluid" alt="Teacher">
                        </div>
                        <div class="row justify-content-center">
                            <div class="w-75 mx-md-5 mx-1 mx-sm-2 mb-5 mt-4 px-sm-5 px-md-2 px-xl-1 px-2">
                                <h1 class="wlcm">Update Session</h1>
                                <span class="sp1">
                                    <span class="px-3 bg-danger rounded-pill"></span>
                                    <span class="ml-2 px-1 rounded-circle"></span>
                                    <span class="ml-2 px-1 rounded-circle"></span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Second column for the update session form -->
                    <div class="col-md-7 col-sm-12 col-xs-12 c2 px-5 pt-5">
                        <!-- Form for updating session details -->
                        <form id="sessionForm" asp-route="UpdateSession" method="post">
                            <!-- Hidden inputs for session and event IDs -->
                            <div class="form-group my-2" style="display:none">
                                <label asp-for="SessionId" class="form-label">Session ID :</label>
                                <input asp-for="SessionId" value=@Model.SessionId type="text" placeholder="Enter Session ID" class="form-control" id="sessionId">
                            </div>
                            <div class="form-group my-2" style="display:none">
                                <label asp-for="EventId" class="form-label">Event ID :</label>
                                <input asp-for="EventId" type="text" value=@Model.EventId placeholder="Enter Event ID" class="form-control" id="eventId">
                            </div>
                            <!-- Input fields for session details -->
                            <div class="form-group my-2">
                                <label asp-for="SessionTitle" class="form-label">Session Title :</label>
                                <input asp-for="SessionTitle" type="text" placeholder="Enter Session Title" class="form-control" id="sessionTitle">
                            </div>

                            <div class="form-group my-2">
                                <label asp-for="SpeakerId">Speaker :</label>
                                <select asp-for="SpeakerId" asp-items="ViewBag.AllSpeakers" id="speaker" class="form-control">
                                </select>
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="Description" class="form-label">Description :</label>
                                <textarea asp-for="Description" class="form-control" id="description" rows="3"></textarea>
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="SessionStart" class="form-label">Session Start :</label>
                                <input asp-for="SessionStart" type="time" class="form-control" id="sessionStart">
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="SessionEnd" class="form-label">Session End :</label>
                                <input asp-for="SessionEnd" type="time" class="form-control" id="sessionEnd">
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="SessionUrl" class="form-label">Session URL :</label>
                                <input asp-for="SessionUrl" type="text" class="form-control" id="sessionUrl">
                            </div><!-- Button group for updating session and canceling -->
                            <div class="btn-group">
                                <button type="submit" class="btn btn-primary">Update Session</button>
                                <!-- Link to cancel update and return to all sessions -->
                                <a asp-route="GetAllSession" asp-route-id=@Model.EventId class="btn btn-danger mx-2">Cancel</a>
                            </div>
                            <br />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
