

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Home</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        .ms-logo {
            width: 40px;
            height: 42px;
            margin-right: 10px;
            margin-left: 20px;
        }
      
        body {
            overflow-x: hidden;
            align-items: center;
            justify-content: center;
            background: url('/Images/bg-img-1.jpeg');
            background-position: center;
            background-repeat: repeat;
            background-size: cover;
            height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        /* Adjustments for container */
        .container {
            max-width: 800px; /* Adjust the maximum width as needed */
        }

        /* Style for modal buttons */
        .modal-footer button {
            margin-left: 10px; /* Add some spacing between buttons */
        }

        /* Style for the heading */
        #heading {
            text-align: center;
            margin-top: 60px;
            margin-bottom: 20px;
            font-size: 30px;
        }

        /* Style for table border edges */
        table {
            border-collapse: separate;
            border-spacing: 2px;
        }

        th,
        td {
            border: 1px solid #ddd;
            border-radius: 8px; /* Add curved edges */
            padding: 8px;
        }
        
        .navbar-custom {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .navbar-brand {
            margin: 0 100px 0 30px;
        }

        .nav-link {
            width: 135px;
        }

        .search-box {
            visibility: hidden;
            margin-left: 360px;
            margin-top: 2px;
            display: flex;
        }

        .input-search-box {
            width: 300px;
            height: 32px;
            border: 1px solid white;
            border-radius: 3px;
            outline: none;
            text-align: center;
            margin-top: 3px;
            margin-right: 10px;
        }

        .cancel-search-box {
            color: white;
            background-color: transparent;
            border: 1px solid transparent;
        }

        .fa-search {
            transform: rotateY(180deg);
        }

        .custom-event-container {
            margin-left: 240px;
            padding-bottom: 50px;
        }

        #mytable tr th {
            text-align: center;
            padding: 10px;
            border: 1px solid lightsteelblue;
            font-size: 19px;
        }

        .accordion-tds {
            border: 1px solid lightsteelblue;
            padding: 10px;
            text-align: center;
        }

        .set-accordion-width {
            width: 1000px;
            text-align: left;
        }

        .accordion-body {
            font-size: 17px;
        }

        .acc-content1 {
            position: relative;
            top: 10px;
        }

        .acc-content2 {
            position: relative;
            top: 20px;
        }

        .acc-content3 {
            position: relative;
            top: 30px;
        }

        .acc-content4 {
            color: forestgreen;
            position: relative;
            top: 0px;
            left: 5px;
        }

        .btn-primary,
        .btn-success,
        .btn-danger,
        .btn-secondary {
            transition: transform 0.3s ease;
            margin-right: 5px; /* Reduce margin between buttons */
        }


            .btn-primary:hover,
            .btn-success:hover,
            .btn-danger:hover,
            .btn-secondary:hover {
                transform: translateY(-2px);
            }

        .view-sessions-btn, .edit-event-btn, .delete-event-btn {
            position: relative;
            top: -20px;
        }

        .center-form {
            margin: 35px auto auto auto;
            width: 50%;
            padding: 20px;
            border-radius: 10px;
            border: 1px solid lightsteelblue;
            background-color: white;
        }

        #custom-eventsearch-container {
            padding-bottom: 50px;
        }

        #searchtable {
            margin: 50px 0 0 240px;
        }

        .searchtable-th {
            text-align: center;
            padding: 10px;
            border: 1px solid lightsteelblue;
            font-size: 19px;
        }
       
    </style>
</head>
<body>

    <!-- Nav Bar Starts Here -->

    <nav class="navbar navbar-expand-md navbar-dark navbar-custom">

        <a href="@Url.RouteUrl("GetAllEvents")">
            <img src="~/Images/Ms-Logo.png" alt="Logo" class="ms-logo">
        </a>
      
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav mt-4">
                <li class="nav-item mx-3">
                    <a class="nav-link text-light" asp-route="AddEvents">Add Events <i class="bi bi-plus-circle"></i></a>
                </li>
                <li class="nav-item mx-3" >
                    <a class="nav-link text-light" asp-route="GetAllSpeakers">All Speakers <i class="bi bi-info-circle"></i></a>
                </li>
                <li class="nav-item mx-3">
                    <form class="form-inline search-box">
                        <input class="input-search-box" type="search" id="SearchButton" placeholder="Search" aria-label="Search">
                        <button class="cancel-search-box" type="button" onclick="toggleSearch()">Cancel</button>
                    </form>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light search-btn-nav" href="#" onclick="toggleSearch()">Search <i class="bi bi-search mx-1"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-route="Home">Logout <i class="bi bi-box-arrow-right mx-1"></i></a>
                </li>
            </ul>
        </div>
    </nav>


    <!-- Nav Bar Ends Here -->
    <div id="center-container">
        @RenderBody()
    </div>

    <script>

        function toggleSearch() {
            var searchBtn = document.querySelector('.nav-item:nth-child(4)');
            var searchBox = document.querySelector('.search-box');

            if (searchBtn.style.visibility !== 'hidden') {
                searchBtn.style.visibility = 'hidden';
                searchBox.style.visibility = 'visible';

            } else {
                searchBtn.style.visibility = 'visible';
                searchBox.style.visibility = 'hidden';

            }
        }

    </script>

</body>
</html>