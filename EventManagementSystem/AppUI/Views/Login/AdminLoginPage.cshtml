@model AppUI.Models.UserInfo

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="icon" href="Ms-Logo-Icon.png">
    <style>
        /*Custom styles */
        body {
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: url('/Images/Admin-bg7.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            height: 100vh;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        .custom-panel {
            margin: 0 0 110px 0;
        }

        .form-wrapper {
            /* background: #9d00ff1e; */
            background-color: rgba(255, 255, 255,0.5);
            padding: 50px;
            border-radius: 8px;
            border: 1px solid white;
            box-shadow: 5px 12px 25px;
            margin-top: -50px;
        }

        input.form-control {
            padding: 12px;
            border: 2px solid rgba(0, 0, 10, 100); /* Reduced transparency to 0.2 */
            border-radius: 30px;
            background-color: transparent;
            margin-bottom: 20px;
            text-align: center;
            color: black;
        }

            input.form-control:focus {
                box-shadow: none;
                outline: 1px;
                background-color: transparent;
                color: black;
            }


        button.login-btn {
            background: #b400ff;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 30px;
            transition: .5s;
            transform-style: preserve-3d;
        }

        .login-btn::after {
            top: -100%;
            left: 0px;
            width: 100%;
            padding: 8px;
            border-radius: 30px;
            position: absolute;
            /* background: #ff7a59; */
            background: #ee00ff;
            content: 'Lets Go !';
            transform-origin: left bottom;
            transform: rotateX(90deg);
        }

        .login-btn:hover {
            transform-origin: center bottom;
            transform: rotateX(-90deg) translateY(100%);
        }


        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .fullscreen-video-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

        #fullscreen-video {
            position: absolute;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            transform: translate(-50%, -50%);
        }

        .container {
            position: relative;
            z-index: 1; /* Ensure the form appears above the video */
        }

    </style>
</head>
<body>
    

    <div class="container">
        <div class="row custom-panel">
            <!-- Left Blank Side -->
            <div class="col-lg-3"></div>

            <!-- Right Side Form -->
            <div class="col-lg-6 d-flex align-items-center justify-content-center right-side">
                <div class="form-wrapper ">
                    <!-- Admin Panel Logo -->
                    <div class="logo text-center">
                        <h2 class="text-dark">Admin Panel</h2>
                    </div>
                    <!-- Login Form Title -->
                    <h2 class="text-center mb-4 text-dark">Log Into Your Account</h2>
                    <form asp-route="ValidateAdmin" method="post">
                        @{
                            string email = string.Empty;
                            string password = string.Empty;
                            if (ViewBag.AdminEmail != null && ViewBag.AdminPassword != null)
                            {
                                email = ViewBag.AdminEmail;
                                password = ViewBag.AdminPassword;
                            }

                        }
                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!-- Email Input -->
                        <div class="mb-3 form-box">
                            <input asp-for="EmailId" class="form-control" id="email" name="email" value=@email placeholder="Enter Your Email" required>
                        </div>
                        <div class="mb-3">
                            <input asp-for="Password" type="password" class="form-control" id="password" name="password" value=@password placeholder="Enter Your Password" required>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="saveCredentials" value="remember" id="rememberMe">
                                <label class="form-check-label text-dark" for="rememberMe">Remember me</label>
                            </div>

                        </div>
                        <!-- Login Button -->
                        <button type="submit" class="btn btn-outline-secondary login-btn w-100 mb-3">Login</button>

                    </form>

                    <!-- Register Link -->
                </div>
            </div>
        </div>
    </div>



</body>
</html>