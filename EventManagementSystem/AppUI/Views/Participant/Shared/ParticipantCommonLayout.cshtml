    <title>Microsoft Events</title>

    <style>
        .myevents-container {
            background-color: rgba(9, 53, 111, 0.888);
            height: auto;
            position:relative;
            top:-15px;
        }

        .myevents-card {
            margin: 10px;
            flex: 1; /* This ensures each card takes up equal space */
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease-in-out;
            border-radius: 10px;
        }

            .myevents-card:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        

        .ms-logo {
            width: 40px;
            height: 42px;
            margin-right: 5px;
        }

        .custom-nav-participant{
            position:relative;
            top:-15px;
        }
        .allevents-bg {
            height: auto;
            padding-bottom: 30px;
        }

        .banner-container-head {
            color: white;
            position: absolute;
            top: 60px;
            left: 60px;
        }

        .banner-container-body {
            width: 820px;
            color: white;
            position: absolute;
            top: 125px;
            left: 60px;
            font-size: 15px;
        }

        .events-banner-img {
            width: 100%;
            height: 270px;
        }

        .parent {
            height: 1250px;
        }

        #banner {
            display: flex;
            margin: 50px 0 0 0;
        }

        #banner-container{
            position:relative;
            top:-20px;
        }
        #text-container {
            color: white;
        }

        .container-register{
            background-color:white;
            position:relative;
            top:-15px;
        }
        #text-container h1 {
            margin: 105px 0 0 100px;
        }

        #text-container p {
            margin: 15px 0 0 100px;
            width: 650px;
        }

        .custom-searchcatalog {
            margin-left: 100px;
            background-color: rgb(0,103,184);
            color: white;
            border-radius: none;
            position: relative;
            top: 25px;
            text-decoration: none;
            color: white;
            transition: 1s;
        }

        .custom-searchcatalog::before {
            content: '';
            position: absolute;
            left: 17px;
            bottom: 5px;
            width: 75%;
            height: 1px;
            background-color: white;
            transform: scaleX(0);
            transition: transform 0.3s ease-in-out;
        }

        .custom-searchcatalog:hover::before {
            transform: scaleX(1);
        }

        #video-container {
            margin-left: 50px;
        }

            #video-container img {
                width: 620px;
                height: 360px;
            }

            #video-container video {
                width: 640px;
            }

        .custom-register-btn {
            position: relative;
            text-decoration: none;
            color: white;
            transition: 1s;
        }

        .adminImage {
            background-image: url('/Images/AdminPageImage.png');
            background-size: cover;
            background-position: center;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .footer-for-register {
            background-color: #F2F2F2;
            height: 100px;
        }

            .custom-register-btn::before {
                content: '';
                position: absolute;
                left: 0;
                bottom: -5px;
                width: 100%;
                height: 1px;
                background-color: white;
                transform: scaleX(0);
                transition: transform 0.3s ease-in-out;
            }

            .custom-register-btn:hover::before {
                transform: scaleX(1);
            }

        .custom-prev {
            margin-right: 100px;
        }

        .custom-next {
            margin-left: 100px;
        }

        #event-container {
            background-color: rgb(230,230,230);
        }

        .custom-tech {
            font-size: 35px;
        }

        .tech-img {
            height: 240px;
        }

        .card-title {
            min-height: 35px;
        }

        .card-text {
            max-height: 145px;
            overflow: hidden;
        }

        .card-text-description {
            min-height: 140px;
            max-height: 140px;
            overflow: hidden;
        }

        .fa-calendar {
            margin-right: 8px;
        }

        .fa-globe {
            margin-right: 3px;
        }

        .custom-register {
            background-color: rgb(0,120,212);
        }

        .featured-partner {
            background-color: rgb(0,103,184);
            color: white;
            text-align: center;
            height: 180px;
            margin-top: 50px;
        }

            .featured-partner h1 {
                padding-top: 50px;
                font-size: 35px;
                padding-bottom: 5px;
            }

        .media-container {
            display: flex;
            gap: 10px;
        }

        .media-icon {
            width: 30px;
            height: 30px;
            margin-top: 25px;
        }

        .custom-table {
            position: relative;
            top: 30px;
        }

        .table-container {
            background-color: black;
            width: 100%;
            height: 350px;
        }

        .custom-table tr th {
            background-color: black;
            color: white;
            font-size: 14px;
            border: none;
        }

        .custom-table tr td {
            background-color: black;
            color: white;
            font-size: 12px;
            border: none;
        }

        .already-registered-text{
            background-color:rgb(255,243,205);
            padding:20px;
            text-align:center;
        }

        .search-events-btn {
            background-color: rgb(0,120,212);
            margin: -140px 0 0 210px;
        }
        .search-box {
            margin: -15px 0 -10px 45px;
            display: flex;
        }

        .fa-search {
            transform: rotateY(180deg);
        }

        .input-search-box {
            width: 300px;
            height: 35px;
            border: 1px solid lightgray;
            border-radius: 3px;
            outline: none;
            text-align: center;
            margin-top: 2px;
            margin-right: 10px;
        }

        .cancel-search-box {
            padding: -8px 0;
            border: 1px solid transparent;
        }

        .custom-login-icon{          
            padding:5px;
            border-radius:5px;
            color: rgb(230,230,230);
        }
    </style>
</head>
